@model IEnumerable<HitsInternshipAssistant.Data.Models.VacancyApply>

<link rel="stylesheet" href="~/css/vacancyApply/vacancyApply.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Index";
}

@*<h1 class="mb-3 mt-4">Отклики на ваши вакансии</h1>*@


@if (!Model.Any())
{

    <h3 class="mb-3 mt-4">Отклик</h3>

   <div class="row d-flex justify-content-between">
       <div class="col-3">
           <img src="~/img/nophoto.jpg" class="img-circle w-100">
           <h5 class="text-center mt-3">Иван Иванов</h5>
       </div>
       <div class="col-3">
           <h3 class="mb-3 mt-4">Контакты</h3>
           <p>Вконтакте: ссылка на вк</p>
           <p>Email: email </p>
           <p>Телефон: +79998889988 </p>
       </div>
       <div class="col-3">
           <h3 class="mb-3 mt-4">Вакансия</h3>
           <p>Название вакансии</p>
       </div>
       <div class="col-3">
           <h3 class="mb-3 mt-4">Статус отклика</h3>
           <div class="d-flex flex-row">
               <p>На рассмотрении</p>
               <i class="fa-regular fa-pen-to-square"></i>
           </div>
         
       </div>
   </div>
   <div>
       <h4 class="mb-3 mt-4">Резюме</h4>

       <h5 class="mb-3 mt-4">Опыт</h5>
       <p>Описание опыта работы</p>

       <h5 class="mb-3 mt-4">Технологии и стек</h5>
       <p>Я умею то-то, потому что то-то, я классный</p>

       <h5 class="mb-3 mt-4">Дополнительная информация</h5>
       <p>Например ссылка на гитхаб</p>
   </div>


    @*<div class="d-flex flex-column h-100 justify-content-center col-9">
        <div class="emptyTitle text-center h3 w-50">
            Похоже, тут пока ничего нет.
            Отдохните!
        </div>
        <img id="emptyImg" src="~/img/EmptyVacancyApplies.png" class="d-flex align-self-center p-0 m-0" />
    </div>*@
}

else
{
    @foreach (var item in Model)
    {
        String fullName = item.User.FirstName + " " + item.User.Patronymic + " " + item.User.LastName;
        
        <div class="card-model card rounded-3 bg-light m-4 col-9">
            <div class="card-model card-body rounded-3 bg-light row w-100 p-2 m-0">
                <div class="col-8">
                    <h5 class="card-title">@fullName</h5>
                    <p class="card-text text-secondary">@item.User.WorkDirection</p>
                    <a class="ref-info w-25">Подробнее...</a>
                </div>
                <div class="col-4 d-flex align-self-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="resume-btn btn btn-primary p-2 d-flex align-items-end justify-content-center rounded-3 w-100">Резюме</a>
                </div>
            </div>
        </div>
    }
}
