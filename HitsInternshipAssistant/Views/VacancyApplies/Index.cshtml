@model IEnumerable<HitsInternshipAssistant.Data.Models.VacancyApply>

<link rel="stylesheet" href="~/css/vacancyApply/vacancyApply.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Index";
}

<div class="h4 d-flex justify-content-xl-start justify-content-center">Ваши отклики</div>


@if (Model.Count() == 0)
{
    <div class="d-flex flex-column h-100 justify-content-center">
        <div class="emptyTitle text-center h3 w-25">
            Похоже, тут пока ничего нет.
            Отдохните!
        </div>
        <img id="emptyImg" src="img/EmptyVacancyApplies.png" />
    </div>
}

else
{
    <table class="table">
    <thead>
        <tr>
            <th>
                Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vacancy.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vacancy.AdditionalInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vacancy.Applicants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vacancy.Company.LogoLink)
            </td>
        </tr>
}
    </tbody>
</table>
}
