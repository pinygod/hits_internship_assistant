@*@model HitsInternshipAssistant.Data.Models.StudentReview
*@
@{
    ViewData["Title"] = "Create";
}
    @section Styles {
<link rel="stylesheet" href="~/css/userDetails.css" asp-append-version="true" />
}


    <h4 class="mb-4 ms-5">Профиль студента</h4>
    <div class="container">
        <div class="row col-9">
            <div class="col-3">
                <h4 class="ms-5">Студент</h4>
                <img src="~/img/nophoto.jpg" alt="Avatar" class="avatar mb-3">
                <p id="name">@ViewBag.Student.FirstName @ViewBag.Student.LastName</p>
            </div>
            <div class="col-4 ms-4" style="color: #BAB8BD;">
                <h4>Примечание</h4>
                <p>Данный отзыв нобходим для сбора информации о студентах деканатом Высшей IT школы </p>
            </div>
            
        </div>
        <div class="container">
              <form asp-action="Create" asp-route-userId="@ViewBag.Student.Id">
               <div class="form-group  mt-3">
                <label class="control-label h4"> Отзыв</label>
                
                <textarea  name="text" class="form-control border-0"  style="background-color: #F0F0F0;"></textarea>
            </div>
            
             <button type="submit" class="btn mt-3" style="background-color: #1794AC; width: 200px; color: white">Сохранить</button>
              </form>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
